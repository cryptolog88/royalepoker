# Linera Testnet Conway Configuration
VITE_LINERA_CHAIN_ID=your_chain_id_here
VITE_LINERA_APP_ID=your_poker_app_id_here
VITE_LINERA_OWNER=your_owner_address_here
VITE_LINERA_NETWORK=testnet-conway

# Testnet Conway RPC endpoints
VITE_LINERA_RPC_1=https://linera-testnet.brightlystake.com:443
VITE_LINERA_RPC_2=https://validator-3.testnet-conway.linera.net:443
VITE_LINERA_FAUCET=https://faucet.testnet-conway.linera.net

# WebSocket server for multiplayer sync
# Production: wss://your-domain.com
# Local development: ws://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Poker Arena (Global Leaderboard)
VITE_ARENA_APP_ID=your_arena_app_id_here
VITE_ARENA_CHAIN_ID=your_arena_chain_id_here

# Linera Service URL (for querying Arena) - leave empty to use Vite proxy
